@using TestCase.Infrastructure.Data
@model Unit
@{
    var unit = Model;
    var plans = ViewData["plans"] as List<Plan>;
}
<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href='@Url.Action("Privacy","Home")'>首页</a></li>
            <li><a href='@Url.Action("Index","_Plan")'>集合</a></li>
            <li><a href="#">详情</a></li>
        </ol>
    </div>
</div>

<div class="row" >
    <div class="col-xs-12">
        <div class="box ui-draggable " style="background-color:whitesmoke;">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-linux"></i>
                    <span>集合详情</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                <form class="col-xs-10 " action="@Url.Action("Update","_Unit")" method="post" id="update">
                    <div class="form-group ">
                        <label class="control-label">编号</label>
                        <input type="hidden" class="form-control" value="@unit.Unid" name="unid" />
                        <input type="text" class="form-control" value="@unit.Unid" disabled />
                        <label class="control-label" name="">标题</label>
                        <input type="text" class="form-control" name="unname" value="@unit.UnName" />
                        <label class="control-label">所属项目</label>
                        <select class="populate placeholder changeState" name="proid">
                            <option value="@unit.Proid">@unit.Proname</option>
                        </select>
                        <label class="control-label">所属计划</label>
                        <select class="populate placeholder changeState" name="pid">
                            <option value="@unit.Pid">@unit.Pname</option>
                            @for (int i = 0; i < plans.Count; i++)
                            {
                                <option value="@plans[i].Pid">@plans[i].Pname</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">集合说明</label>
                        <textarea class="form-control" name="unstorage" style="height:300px;">@unit.UnStorage</textarea>
                    </div>
                </form>
                <div class="clearfix"></div>
                <div class="col-sm-6 col-sm-offset-3">
                    <br />
                    <div class="btn-group-justified">
                        <a class="btn btn-default btn-link " href='@Url.Action("Index","_Unit")'><span><i class="fa fa-times-circle-o"></i></span> 返回</a>
                        <a class="btn btn-success btn-link develop" style="color:dimgray;" onclick="toUpdate()"><span><i class="fa fa-check-circle"></i></span> 提交</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/base.js"></script>