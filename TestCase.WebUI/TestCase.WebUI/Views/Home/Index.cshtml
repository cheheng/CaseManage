@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>登录</title>
    <!-- Custom styles -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="text-center">
    <div class="container-fluid">
        <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <form class="login-form text-center" action="@Url.Action("Login","Home")" method="post">
                <div class="box-content">
                    <div class="text-center ">
                        <h3 class="page-header">登录</h3>
                    </div>
                    <div class="form-group">
                        <label class="control-label">邮箱</label>
                        <input type="text" class="form-control" name="username" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">密码</label>
                        <input type="password" class="form-control" name="password" />
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("Login","Home")" class="btn btn-primary" >登录</a>
                    </div>
                    <div>
                        @*<a class=" fr" href="@Url.Action("Register","_User")">企业注册</a>*@
                        <span class="link-border fr">|</span>
                        <a class="fr" href="#">忘记密码</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
