@using TestCase.Infrastructure.Data
@model ForCase
@{
    var detail = Model;
}
<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">首页</a></li>
            <li><a href="#">用例</a></li>
            <li><a href="#">详情</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box ui-draggable ">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-linux"></i>
                    <span>用例详情</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                <form class="col-xs-12 " action="@Url.Action("Update","_Case")"  method="post" id="update">
                    <div class="form-group col-xs-9">
                        <label class="control-label">编号</label>
                        <input type="hidden" class="form-control" value="@detail.Cid" name="cid" />
                        <input type="text" class="form-control" value="@detail.Cid" disabled />
                        <label class="control-label">标题</label>
                        <input type="text" class="form-control" value="@detail.Ctitle" name="ctitle" />
                        <label class="control-label">前置条件</label>
                        <textarea class="form-control" style="height:100px;" value="@detail.Previous" name="previous"></textarea>
                        <label class="control-label">执行步骤</label>
                        <textarea class="form-control" style="height:100px;"  value="@detail.Detail" name="detail"></textarea>
                        <label class="control-label">实际结果</label>
                        <textarea class="form-control" style="height:100px;"  value=""></textarea>
                    </div>
                    <div class="col-xs-3 text-left form-group">
                        <label class="control-label">所属项目</label>
                        <input type="text" class="form-control"value="@detail.Proid" name="proid" />
                        <label class="control-label">所属计划</label>
                        <input type="text" class="form-control" value="@detail.Pid" name="pid" />
                        <label class="control-label">所属集合</label>
                        <input type="text" class="form-control"value="@detail.Toname" name="unid" />
                        <label class="control-label">由谁创建</label>
                        <input type="hidden" class="form-control" value="@detail.Uid" name="uid" />
                        <input type="text" class="form-control" value="@detail.Name"  disabled />
                        <label class="control-label">指派给</label>
                        <input type="text" class="form-control"value="@detail.Uid2" name="uid2" />
                        <label class="control-label">优先级</label>
                        <input type="text" class="form-control"value="@detail.Prior" name="prior" />
                        <label class="control-label">状态</label>
                        <input type="text" class="form-control" value="@detail.State" name="state" />
                    </div>
                </form>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-4 ">
                <button class="btn btn-default btn-link col-xs-3 " id="cancel"><span><i class="fa fa-times-circle-o"></i></span> 取消</button>
                <button class="btn btn-success btn-link col-xs-3" style="color:dimgray;" type="submit" onclick="toUpdate()"><span><i class="fa fa-check-circle"></i></span> 提交</button>
            </div>
        </div>
    </div>
</div>

<script src="~/base.js"></script>