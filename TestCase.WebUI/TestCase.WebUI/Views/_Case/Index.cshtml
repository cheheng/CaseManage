@using TestCase.Infrastructure.Data;
@{
   var cases=ViewData["cases"] as List<Thecase>;
}
<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">首页</a></li>
            <li><a href="#">用例</a></li>
        </ol>
    </div>
</div>
<div class="box">
    <div class="box-header">
        <div class="box-name">
            <i class="fa  fa-building-o"></i>
            <span>用例列表</span>
        </div>
        <div class="row">
            <div class="col-8 col-sm-4 col-xs-offset-1">
                <form id="search" action="@Url.Action("Index","_Case")" method="post">
                    <input type="text" name="pname" placeholder="按标题查找" onclick="enterSearch()" />
                    <i class="fa fa-search"></i>
                </form>
            </div>
            <div class="col-xs-2 pull-right">
                <a class="btn btn-info btn-link" style="color:black;" onclick="ab()">
                    <i class="fa fa-plus-square-o"></i> 新建&nbsp;
                </a>
                &nbsp;
                <div class="btn-group">
                    <a class="btn btn-default" href="#"><i class="fa fa-th-large fa-fw"></i> 批量</a>
                    <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="fa fa-caret-down"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#" class=""><i class="fa fa-trash-o fa-fw"></i> 删除</a></li>
                        <li><a href="#"><i class="fa fa-ban fa-fw"></i> 禁用</a></li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="no-move"></div>
    </div>
    <div class="box-content no-padding table-responsive">
        <div>
            <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-case">
                <thead>
                    <tr>
                        <th>用例编号</th>
                        <th>标题</th>
                        <th>创建者</th>
                        <th>分配给</th>
                        <th>操作</th>
                        <th>
                            <label>
                                <input type="checkbox" name="acceptTerms" />全选
                            </label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < cases.Count; i++)
                    {
                        <tr>
                            <th>@cases[i].Cid</th>
                            <th>@cases[i].Ctitle</th>
                            <th>@cases[i].Name </th>
                            <th>@cases[i].Toname</th>
                            <th>
                                <label>
                                    <input type="checkbox" />
                                </label>
                            </th>
                            <th>
                                <button>
                                    <i class="fa fa-plus-square-o"></i>
                                </button>
                                <a class=" btn-dark btn-link del" id="@cases[i].Cid" name="cid" onclick="confDel(cases[i].Cid)">
                                    <i class="fa   fa-times-circle-o  " onclick="" style="color:rgba(255, 69, 0, 0.90)">删除</i>
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="clearfix"></div>
        <div class="box-content">
            <div class="col-sm-6">
                <div class="dataTables_info" id="datatable-2_info"></div>
            </div>
            <div class="col-sm-6 text-center">
                <div class="dataTables_paginate paging_bootstrap">
                    <ul class="pagination"><li class="prev disabled"><a href="#">← 上一页</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li><a href="#">3</a></li><li class="next"><a href="#">下一页 → </a></li></ul>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<script src="~/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(".fa-times").click((e) => {
        $.ajax(URLtag, {
            data: {
            },
            type: 'get',
            dataType:'json',
            success: function (data) { },
            error: function () { }
        })
    })
</script>
